@model RegisterVM
<form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="single-input-item">
        <input asp-for="FullName" placeholder="Full Name" required />
    </div>
    <div class="single-input-item">
        <input asp-for="Email" placeholder="Enter your Email" required />
    </div>
    <div class="single-input-item">
        <input asp-for="UserName" placeholder="Username" required />
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="single-input-item">
                <input asp-for="Password" placeholder="Password" required />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <input asp-for="ConfirmPassword" placeholder="Confirm Passwor" required />
            </div>
        </div>
    </div>
    <div class="single-input-item">
        <div class="login-reg-form-meta">
            <div class="remember-meta">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="subnewsletter">
                    <label class="custom-control-label" for="subnewsletter">Subscribe Our Newsletter</label>
                </div>
            </div>
        </div>
    </div>
    <div class="single-input-item">
        <button class="btn main-btn-2">Register</button>
    </div>
</form>

@section Script{ 
<partial name="_ValidationFormScriptPartial">
}